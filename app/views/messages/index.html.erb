<p style="color: green" id="notice">
  <%= notice %>
</p>
<h6>Messages
  <span id="message_count">
  <%= Message.count %>
  </span>
</h6>

<%= render "search_form" %>

<div id="new_message">
  <%= render "form", message: Message.new %>
</div>
<div id="messages">
  <table>
  <% @messages.each do |message| %>
     <tr><%= render message %></tr>
  <% end %>
  
  </table>
</div>

<%= link_to "New message", new_message_path %>

<p style="color: green"><%= notice %></p>

<h6>Messages
  <span id="message_count">
  <%= Message.count %>
  </span>
</h6>
<div id="new_message">
  <%= render "form", message: Message.new %>
</div>
<div id="messages">
  <% @messages.each do |message| %>
    <%= render message %>
  <% end %>
</div>

<%= link_to "New message", new_message_path %>
